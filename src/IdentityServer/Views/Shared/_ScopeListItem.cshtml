@model ScopeViewModel
<div class="item">
    <label>
        <input class="consent-scopecheck"
               type="checkbox"
               name="ScopesConsented"
               id="scopes_@Model.Name"
               value="@Model.Name"
               checked="@Model.Checked"
               disabled="@Model.Required" />
        @if (Model.Required)
        {
            <input type="hidden"
                   name="ScopesConsented"
                   value="@Model.Name" />
        }

        @if (Model.DisplayName == "Your user identifier")
        {
            <span>Din brukeridentite</span>
        }
        else if (Model.DisplayName == "User profile")
        {
            <span>Brukerprofil</span>
        }
        else
        {
            @Model.DisplayName
        }


    </label>
    @if (Model.Required)
    {
        <span>(obligatorisk)</span>
    }
    @if (Model.Description != null)
    {
            <label for="scopes_@Model.Name">
                @if (Model.Description == "Your user profile information (first name, last name, etc.)")
                {
                    <span>(fornavn, etternavn ol.)</span>
                }
                else
                {
                    @Model.Description
                }

            </label>
     }
</div>
